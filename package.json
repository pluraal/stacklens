{
  "name": "stacklens",
  "version": "0.0.1",
  "description": "Semantic technology stack projection toolkit.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#dist\"",
    "lint:md-links": "remark --frail --quiet \"specs/**/*.md\" \".specify/**/*.md\" \".github/**/*.md\"",
    "test": "node --test 'dist/**/*.test.js'",
    "ci": "npm run typecheck && npm run lint && npm run lint:md && npm run lint:md-links && npm run build"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.10",
    "@types/node": "^25.3.1",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^10.0.2",
    "markdownlint-cli2": "^0.15.0",
    "remark-cli": "^12.0.1",
    "remark-validate-links": "^13.1.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "globby": "^16.1.1",
    "micromatch": "^4.0.8",
    "yaml": "^2.8.2"
  },
  "bin": {
    "stacklens": "./dist/cli/main.js"
  }
}
